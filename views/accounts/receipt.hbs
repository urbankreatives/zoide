    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.9.2/html2pdf.bundle.js"></script>







<style>
	.flex{
		display: inline-flex;
		width: 100%;
	}
	.w-50{
		width: 50%;
	}
	.text-center{
		text-align:center;
	}
	.text-right{
		text-align:right;
	}
	table.wborder{
		width: 100%;
		border-collapse: collapse;
	}
	table.wborder>tbody>tr, table.wborder>tbody>tr>td{
		border:1px solid;
	}
	p{
		margin:unset;
	}

</style>
<body>

<script type="text/javascript">
<!--
window.print();
//-->
</script>
	


          
<div class="container-fluid" id="voucher">
	<p class="text-center"><b></b></p>
	<hr>
	<div class="flex">
		<div class="w-50">
			<p>Student ID: <b>{{user.uid}}</b></p>
			<p>Student: <b>{{user.fullname}}</b></p>
			<p>Class: <b>{{user.class1}}</b></p>
		</div>
	
		<div class="w-50">
			<p>Payment Date: <b>{{date}}</b></p>
			<p>Paid Amount: <b>${{amount}}</b></p>
			
		</div>
		
	</div>
	<hr>
	<p><b>Payment Summary</b></p>
	<table class="wborder">
		<tr>
			<td width="50%">
				<p><b>Receipt Details</b></p>
				<hr>
				<table width="100%">
					<tr>
						<td width="50%">Clerk:</td>
						<td width="50%" class='text-right'>{{clerk}}</td>
					</tr>
			
				<tr>
					<td><b>Receipt Number</b></td>
					<td class='text-right'><b>{{receiptNumber}}</b></td>
				</tr>
			
				</table>
			</td>			
			<td width="50%">
			<p><b>Student Account Details</b></p>
			
				<table width="100%" class="wborder">
					<tr>
						<td>Old Balance ($)</td>
						<td class='text-right'><b>{{user.balanceCarriedOver}}</b></td>
					</tr>
					<tr>
						<td>Total Paid ($)</td>
						<td class='text-right'><b>{{amount}}</b></td>
					</tr>
					<tr>
						<td>New Balance ($)</td>
						<td class='text-right'><b>${{user.balance}}</b></td>
					</tr>
				</table>
			</td>			
		</tr>
	</table>
</div>

</body>